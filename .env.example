# Nam Long Center - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ===================================
# Application
# ===================================
REACT_APP_NAME="Nam Long Center"
REACT_APP_VERSION="2.0.0"
REACT_APP_ENVIRONMENT="development"
REACT_APP_API_URL="http://localhost:3000/api"

# ===================================
# Supabase (Database & Authentication)
# ===================================
# Local test: cần REACT_APP_SUPABASE_URL + REACT_APP_SUPABASE_ANON_KEY (client).
# API routes (checkout, IPN) dùng SUPABASE_SERVICE_ROLE_KEY - không dùng tiền tố REACT_APP_.
REACT_APP_SUPABASE_URL="https://your-project.supabase.co"
REACT_APP_SUPABASE_ANON_KEY="eyJ..." # anon public JWT
SUPABASE_SERVICE_ROLE_KEY="eyJ..." # service_role cho API routes (checkout, IPN) - ưu tiên biến này, không expose client
REACT_APP_SUPABASE_SERVICE_ROLE_KEY="eyJ..." # fallback (không khuyến khích) - CHỈ server-side

# Supabase Storage S3 (lưu tài liệu - dùng S3 protocol nếu cần)
SUPABASE_S3_ACCESS_KEY_ID=""
SUPABASE_S3_SECRET_ACCESS_KEY=""
SUPABASE_S3_ENDPOINT="https://your-project.storage.supabase.co/storage/v1/s3"
SUPABASE_S3_REGION="ap-south-1"

# Database password (migrations / direct Postgres)
SUPABASE_DB_PASSWORD=""

# Publishable API Key (Supabase format mới)
SUPABASE_PUBLISHABLE_KEY="sb_publishable_..."

# ===================================
# AI Services
# ===================================
# OpenAI (GPT-4)
REACT_APP_OPENAI_API_KEY="sk-..."
REACT_APP_OPENAI_MODEL="gpt-4-turbo"
REACT_APP_OPENAI_ORG="" # Optional

# Anthropic (Claude)
REACT_APP_ANTHROPIC_API_KEY="sk-ant-..."
REACT_APP_ANTHROPIC_MODEL="claude-3-7-sonnet-20250219"

# AI Feature Flags
REACT_APP_AI_TUTORING_ENABLED="true"
REACT_APP_AI_RECOMMENDATIONS_ENABLED="true"
REACT_APP_AI_CONTENT_GENERATION_ENABLED="true"
REACT_APP_AI_CODE_REVIEW_ENABLED="true"
REACT_APP_AI_VOICE_ENABLED="false"
REACT_APP_AI_IMAGE_GEN_ENABLED="false"

# ===================================
# Payment Providers
# ===================================
# Stripe
REACT_APP_STRIPE_PUBLISHABLE_KEY="pk_test_..."
REACT_APP_STRIPE_SECRET_KEY="sk_test_..."
REACT_APP_STRIPE_WEBHOOK_SECRET="whsec_..."

# PayPal
REACT_APP_PAYPAL_CLIENT_ID=""
REACT_APP_PAYPAL_SECRET=""

# VN Pay (Vietnamese payment)
REACT_APP_VNPAY_TMN_CODE=""
REACT_APP_VNPAY_HASH_SECRET=""
REACT_APP_VNPAY_URL="https://sandbox.vnpayment.vn/paymentv2/vpcpay.html"

# SePay (QR chuyển khoản) - CHỈ server-side, không dùng REACT_APP_*
# Doc: https://developer.sepay.vn/vi/cong-thanh-toan/bat-dau
# Production: dùng SP-LIVE-*, spsk_live_*, SEPAY_ENV=production — chỉ cấu hình trong env (Vercel/local), KHÔNG commit secret vào repo.
# Test/Preview: SP-TEST-*, spsk_test_*, SEPAY_ENV=sandbox
SEPAY_MERCHANT_ID=""
SEPAY_SECRET_KEY=""
SEPAY_ENV="sandbox"

# ===================================
# Blockchain / Web3
