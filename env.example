# Stripe Configuration (REQUIRED for Visa/Mastercard payments)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
REACT_APP_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
REACT_APP_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
REACT_APP_STRIPE_RETURN_URL=http://localhost:3000/payment/stripe/return
REACT_APP_STRIPE_WEBHOOK_URL=http://localhost:3000/api/payment/stripe/webhook

# MoMo Configuration (OPTIONAL - for MoMo payments)
REACT_APP_MOMO_PARTNER_CODE=YOUR_PARTNER_CODE
REACT_APP_MOMO_ACCESS_KEY=YOUR_ACCESS_KEY
REACT_APP_MOMO_SECRET_KEY=YOUR_SECRET_KEY
REACT_APP_MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api
REACT_APP_MOMO_RETURN_URL=http://localhost:3000/payment/momo/return
REACT_APP_MOMO_NOTIFY_URL=http://localhost:3000/api/payment/momo/notify

# SePay (QR chuyển khoản) - TUYỆT MẬT - CHỈ đặt trên server, không dùng REACT_APP_
# https://developer.sepay.vn/vi/cong-thanh-toan/bat-dau
# Lấy tại https://my.sepay.vn/ > Cổng thanh toán > Đăng ký (Sandbox: thông tin tạm thời)
SEPAY_MERCHANT_ID=your_merchant_id_here
SEPAY_SECRET_KEY=your_secret_key_here
SEPAY_ENV=sandbox

# Commission Configuration
REACT_APP_PLATFORM_COMMISSION_RATE=15
REACT_APP_MIN_COMMISSION_AMOUNT=100

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_APP_URL=http://localhost:3000

# Email Configuration (OPTIONAL)
REACT_APP_EMAILJS_SERVICE_ID=your-service-id
REACT_APP_EMAILJS_TEMPLATE_ID=your-template-id
REACT_APP_EMAILJS_PUBLIC_KEY=your-public-key

# App Configuration
REACT_APP_APP_NAME=Knowledge Base
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_PAYMENT_MONITORING=true

# ===========================================
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env (cp env.example .env)
# 2. Điền giá trị thật vào .env - KHÔNG commit file .env (đã ignore bởi .gitignore)
# 3. SePay / VNPay / Stripe: MERCHANT ID, SECRET KEY chỉ đặt trong .env hoặc biến môi trường server
# 4. Run: npm start
# ===========================================